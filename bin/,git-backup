#!/usr/local/bin/bash
rm -rf ~/git-dotfiles/config-dots/ ~/git-dotfiles/bin/  ~/git-dotfiles/etc/ ~/git-dotfiles/loader/ ~/git-dotfiles/c-code/ ~/git-dotfiles/PDC-science/
cp -r ~/.config ~/git-dotfiles/config-dots/
cd ~/git-dotfiles
cp -r ../PDC-science ./
cp -r ../c-code ./
cp ../.zshrc ./
cp -r ../bin/ ./bin
cp -r /etc ./etc/
mkdir loader
cp -r /boot/loader.* loader/
git add .
cd ~/git-dotfiles
echo "now cd ~/git-dotfiles, git commit and git push"
