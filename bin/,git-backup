#!/usr/local/bin/bash
cd ~/git-dotfiles
rm -rf ~/git-dotfiles/bin ~/git-dotfiles/small-projects ~/git-dotfiles/prime-list ~/git-dotfiles/.config ~/git-dotfiles/sysconfig ~/git-dotfiles/.zshrc
mkdir -p ~/git-dotfiles/sysconfig/etc
cp -r ~/.config ~/git-dotfiles/.config
cp -r /etc/ ~/git-dotfiles/sysconfig/etc
cp ~/.zshrc ~/git-dotfiles/zshrc
cp -r ~/bin ~/git-dotfiles/bin
cp -r ~/Documents/small-projects ~/git-dotfiles/small-projects
doas cp /boot/loader.conf ~/git-dotfiles/sysconfig/loader.conf
pkg prime-list > ~/git-dotfiles/tmp
tr '\n' ' ' < tmp > prime-list 
rm ~/git-dotfiles/tmp
echo "now cd ~/git-dotfiles, git commit and git push"
